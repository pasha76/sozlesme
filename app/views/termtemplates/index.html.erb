<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Sözleşme maddeleri listesi</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">

        <div class="row">
          <div class="col-md-3">
            Sözleşme maddeleri
          </div>
          <div class="pull-right">
            <a class="btn btn-sm btn-success" href="<%= new_termtemplate_path %>">Yeni sözleşme bölümü</a>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-sections">
          <thead>
          <tr>
            <th>Madde içeriği</th>
            <th>Konusu</th>
            <th>Anahtar kelimeler</th>
            <th>Hazırlayan</th>
            <!--<th>Hazırlanma tarihi</th>-->
            <th>Aksiyon</th>
          </tr>
          </thead>
          <tbody>

          <%= render "termtemplates/terms" %>

          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-sections').DataTable({
            responsive: false
        });
    });
</script>
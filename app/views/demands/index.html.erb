<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Talep listeniz</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-3">
            Sözleşme talepleriniz
          </div>
          <div class="pull-right">
            <a class="btn btn-sm btn-success" href="<%= new_demand_path %>">Yeni talep</a>
          </div>
        </div>

      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-sections">
          <thead>
          <tr>
            <th>Talebiniz</th>
            <th>İlgili kişiler</th>
            <th>Hazırlanma tarihi</th>
            <th>Durum</th>
          </tr>
          </thead>
          <tbody>

          <% for tmp in @demands %>
              <tr class="odd gradeX">
                <td>
                  <div class="div-text">
                    <%= raw tmp.content %>
                  </div>
                </td>
                <td>
                  <%=tmp.users.map{|u|u.name}.to_sentence(two_words_connector: ', ')%>
                </td>
                <td class="center"><%= tmp.created_at.strftime("%d/%m/%Y") %></td>
                <td><%= link_to tmp.workflow_state, tmp %></td>

              </tr>
          <% end %>

          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-sections').DataTable({
            responsive: false
        });
    });
</script>
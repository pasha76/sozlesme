<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Firma listesi</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-3">
            Firma listesi
          </div>
          <div class="pull-right">
            <a class="btn btn-sm btn-success" href="<%= new_company_path %>">Yeni firma</a>
          </div>
        </div>
      </div>

      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-companies">
          <thead>
          <tr>
            <th>Firma ismi</th>
            <th>Adres</th>
            <th>Email</th>
            <th>Vergi no</th>
            <th>Göster</th>
            <th>Düzenle</th>
            <th>Sil</th>
          </tr>
          </thead>
          <tbody>

          <% @companies.each do |company| %>
              <tr>
                <td><%= company.name %></td>
                <td><%= company.address %></td>
                <td><%= company.email %></td>
                <td><%= company.tax_no %></td>
                <td><%= link_to 'Show', company %></td>
                <td><%= link_to 'Edit', edit_company_path(company) %></td>
                <td><%= link_to 'Destroy', company, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<script>
    $(document).ready(function () {
        $('#dataTables-companies').DataTable({
            responsive: false
        });
    });
</script>


<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Taslak sözleşme başlat</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Taslak bilgilerini giriniz
      </div>
      <%= form_for(@draftagreement, :html => {:role => 'form'}) do |f| %>
          <div class="panel-body">
            <div class="form-group">
              <%= f.label :name, "Taslak başlığı" %>
              <%= f.text_field :name, :autofocus => true, class: 'form-control wysihtml5' %>
            </div>
            <div class="form-group">
              <div class="col-lg-3">
                <%= f.label :demand_id, "İlgili talep" %>
              </div>
              <%= cmp_select(@draftagreement, @demands, "content")%>
            </div>
            <div class="form-group">
              <div class="col-lg-3  ">
                <%= f.label :agreementtemplate_id, "Sözleşme tipi" %>
              </div>
              <%= cmp_select(@draftagreement, @agreementtemplates, "name")%>
            </div>

          </div>
          <div class="panel-footer">
            <%= f.submit 'Kaydet ', :class => 'btn btn-success right' %>
          </div>

      <% end %>
    </div>
  </div>
</div>


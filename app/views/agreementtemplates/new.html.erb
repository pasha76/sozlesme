<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Sözleşme taslağı hazırla</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Sözleşme tanımla
      </div>
      <%= form_for(@template, :html => {:role => 'form'}) do |f| %>
          <div class="panel-body">


            <div class="form-group">
              <%= f.label :name,"Başlık" %>
              <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :subject,"Konusu" %>
              <%= f.text_area :subject, :autofocus => true, class: 'form-control' %>
            </div>


          </div>
          <div class="panel-footer">
            <%= f.submit 'İlerle ', :class => 'btn btn-success right' %>
          </div>

      <% end %>
    </div>
  </div>
</div>
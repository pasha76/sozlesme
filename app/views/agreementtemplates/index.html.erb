<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Sözleşme başlık listesi</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-3">
            Sözleşme başlıkları
          </div>
          <div class="pull-right">
            <a class="btn btn-sm btn-success" href="<%= new_agreementtemplate_path%>">Yeni sözleşme başlığı</a>
          </div>
        </div>

      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-sections">
          <thead>
          <tr>
            <th>Sözleşme adı</th>
            <th>Konusu</th>
            <th>Hazırlayan</th>
            <!--<th>Hazırlanma tarihi</th>-->
            <th>Aksiyon</th>

          </tr>
          </thead>
          <tbody>

          <%=render "agreementtemplates/agreements"%>

          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-sections').DataTable({
            responsive: false
        });
    });
</script>
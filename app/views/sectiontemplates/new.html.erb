<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Sözleşme bölümü oluştur</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Yeni sözleşme bölümü
      </div>
      <%= form_for(@section, :html => {:role => 'form'}) do |f| %>
          <div class="panel-body">


            <div class="form-group">
              <%= f.label :name,"Bölüm adı" %>
              <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :subject,"Bölümün konusu" %>
              <%= f.text_area :subject, :autofocus => true, class: 'form-control' %>
            </div>


          </div>
          <div class="panel-footer">
            <%= f.submit 'Kaydet ', :class => 'btn btn-success right' %>
          </div>

      <% end %>
    </div>
  </div>
</div>